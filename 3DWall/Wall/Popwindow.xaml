<UserControl x:Class="_3DWall.Wall.Popwindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             >
    <!--Height="620" Width="820"-->
    <UserControl.RenderTransform>
        <TransformGroup>
            <ScaleTransform x:Name="_scale" CenterX="410" CenterY="310"  />
            <RotateTransform x:Name="_rot" CenterX="410" CenterY="310" />
        </TransformGroup>

    </UserControl.RenderTransform>
    <UserControl.LayoutTransform>
        <ScaleTransform x:Name="_Scale" />
    </UserControl.LayoutTransform>
    <Grid>
        <Border BorderThickness="10" BorderBrush="GhostWhite">

            <Image  Width="800"  Source="{Binding Path=PictureSource}"   />

        </Border>
    </Grid>
</UserControl>
